{
  "name": "sqliteparser",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "npm run electron:dev",
    "build": "npm run electron:build",
    "start": "npm run electron:start",
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently -k \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "next build && electron-builder",
    "electron:start": "electron .",
    "electron:dev-build": "next build && electron .",
    "package:win": "npm run next:build && electron-builder --win",
    "package:mac": "npm run next:build && electron-builder --mac",
    "package:linux": "npm run next:build && electron-builder --linux"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@mantine/core": "^7.17.4",
    "@mantine/hooks": "^7.17.4",
    "@mantine/notifications": "^7.17.5",
    "@tabler/icons-react": "^3.31.0",
    "@types/recharts": "^1.8.29",
    "axios": "^1.8.4",
    "next": "15.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^9.0.8",
    "concurrently": "^9.1.2",
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.sqlite.forensicanalyzer",
    "productName": "SQLite Forensic Analyzer",
    "files": [
      "electron/**/*",
      "node_modules/**/*",
      ".next/**/*",
      "public/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/favicon.ico"
    }
  }
}
